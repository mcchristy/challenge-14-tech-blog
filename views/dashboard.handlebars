
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-8">
        <h1>Hello, {{name}}!</h1>
        <hr>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                 <div class="card-header">
                <h3>New Blog Post</h3>
        <form>
          <div class="form-group">
            <label for="post-title">Title:</label>
            <input
              type="text"
              class="form-control"
              id="post-title"
              placeholder="Enter post title"
            />
          </div>
          <div class="form-group">
            <label for="post-content">Content:</label>
            <textarea
              class="form-control"
              id="post-content"
              rows="4"
              placeholder="Enter post content"
            ></textarea>
          </div>
          <button
            type="button"
            class="btn btn-primary"
            id="add-post-btn"
          >
            Add Post
          </button>
        </form>
      </div>
    </div>

    <div class="col-md-4">
        {{#if posts.length}}
          <div class="card">
            <div class="card-header">
              <h3>Your Blog Posts:</h3>
            </div>
            <div class="card-body blog-post-list">
              {{#each posts as |post|}}
                <div class="row mb-2">
                  <div class="col-md-8">
                    <h4><a href='/post/{{post.id}}'>{{post.title}}</a></h4>
                    <p>Created on: {{format_date post.date_created}}</p>
                  </div>
                  <div class="col-md-4">
                    <a
                      href="/edit-post/{{post.id}}"
                      class="btn btn-sm btn-primary"
                    >Edit</a>
                    <button
                      class="btn btn-sm btn-danger delete-button"
                      data-id="{{post.id}}"
                    >DELETE</button>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        {{else}}
          <div class="alert alert-info">
            <p>No posts yet.</p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
{{/section}}
        <div class="dashboard-container">
        
        </div>
      </div>
    </div>
  </div>
{{/section}}