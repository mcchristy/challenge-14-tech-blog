<div class="container mt-4">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="card">
          <div class="card-header">
            <h2>{{post.title}}</h2>
            <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
          </div>
          <div class="card-body">
            <p class="card-text">{{{post.content}}}</p>
          </div>
        </div>
        <hr>
        
        <h3>Comments</h3>

        {{#if comments.length}}
          {{#each comments as |comment|}}
            <div class="card">
              <div class="card-body">
                <p class="card-text">{{{comment.content}}}</p>
                <p class="card-text">Comment by {{comment.user.name}} on {{format_date comment.date_created}}</p>
              </div>
            </div>
          {{/each}}
        {{else}}
          <p>No comments available for this post.</p>
        {{/if}}
        
        {{#if logged_in}}
        <form id="comment-form">
          <div class="form-group">
            <label for="comment-content">Add a Comment:</label>
            <textarea
              class="form-control"
              id="comment-content"
              name="comment-content"
              rows="4"
              placeholder="Enter your comment"
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit Comment</button>
        </form>
        {{else}}
        <p>To comment, please <a href="/login">login</a> or <a href="/signup">create an account</a>.</p>
        {{/if}}
      </div>
    </div>
      <script src="/js/post.js"></script>
  </div>